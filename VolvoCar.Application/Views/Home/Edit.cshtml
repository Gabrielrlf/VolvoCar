@model VolvoCar.Domain.Model.Truck

@{
    ViewData["Title"] = "Editar";
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ModelName" class="control-label"></label>
                <select asp-for="ModelName" class="form-control" />
                    <option value="">Selecione um tipo</option>
                    <option value="FM">FM</option>
                    <option value="FH">FH</option>
                </select>
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearModel" class="control-label"></label>
                <select name="YearModel" class="form-control">
                    @for (int i = 0; i <= 1; i++)
                    {
                    <option>@(DateTime.Now.AddYears(i).Year)</option>
                    }
                </select>
                <span asp-validation-for="YearModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearFabrication" class="control-label"></label>
                <input asp-for="YearFabrication" class="form-control" readonly />
                <span asp-validation-for="YearFabrication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
